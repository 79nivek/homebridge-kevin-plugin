{
  "name": "homebridge-ac",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ac/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "tags": [],
  "targets": {
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/ac",
        "commands": [
          "pnpm install"
        ]
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "libs/ac/dist",
        "tsConfig": "libs/ac/tsconfig.lib.json",
        "packageJson": "libs/ac/package.json",
        "updateBuildableProjectDepsInPackageJson": true,
        "clean": true,
        "main": "libs/ac/src/index.ts",
        "assets": [
          "libs/ac/*.md",
          "libs/ac/config.schema.json"
        ]
      },
      "configurations": {
        "development": {
          "watch": true
        },
        "production": {
          "watch": false
        }
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "dependsOn": ["build:development"],
      "options": {
        "cwd": "libs/ac",
        "commands": [
          "npm run watch"
        ]
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "noVerify": true,
        "preid": "{projectName}",
        "commitMessageFormat": "release({projectName}): ðŸŽ¸ cut release to {version}",
        "postTargets": [
          "build"
        ]
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "{projectName}-{tag}",
        "notes": "{projectName}-{notes}"
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    }
  }
}
